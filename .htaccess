Options +FollowSymLinks

# Just a simple redirect for all non-accessible items
ErrorDocument 404 /cms-lite/index.php?arg1=not-found

<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /cms-lite/

# Allowing access to the admin area of the site with mod_rewrite
RewriteRule ^$ index.php

# Just use the directory or filename if that's what we're going for
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Mainly for "'controller/index/"
# And if the query is blank, just goes to index.php by default anyway
RewriteRule ^([A-Za-z0-9_-]+)$ /$1/ [R]
RewriteRule ^([A-Za-z0-9_-]+)/$ index.php?arg1=$1

# Mainly for 'controller/method_name/' style links, but passes the second arg on it's way
RewriteRule ^([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)$ /$1/$2/ [R]
RewriteRule ^([A-Za-z_\-]+)/([A-Za-z0-9_\-]+)/$ index.php?arg1=$1&arg2=$2

# Mainly for 'controller/method_name/arg1/' style links
RewriteRule ^([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)$ /$1/$2/$3/ [R]
RewriteRule ^([A-Za-z_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/$ index.php?arg1=$1&arg2=$2&arg3=$3

# Mainly for 'controller/method_name/arg1/arg2/' style links
RewriteRule ^([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)$ /$1/$2/$3/$4/ [R]
RewriteRule ^([A-Za-z_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/$ index.php?arg1=$1&arg2=$2&arg3=$3&arg4=$4

# Mainly for 'controller/method_name/arg1/arg2/' style links
RewriteRule ^([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)$ /$1/$2/$3/$4/$5/ [R]
RewriteRule ^([A-Za-z_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/$ index.php?arg1=$1&arg2=$2&arg3=$3&arg4=$4&arg5=$5

# Mainly for 'controller/method_name/arg1/arg2/arg3/' style links
RewriteRule ^([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)$ /$1/$2/$3/$4/$5/$6/ [R]
RewriteRule ^([A-Za-z_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/$ index.php?arg1=$1&arg2=$2&arg3=$3&arg4=$4&arg5=$5&arg6=$6

# Mainly for 'controller/method_name/arg1/arg2/arg3/arg4' style links
RewriteRule ^([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)$ /$1/$2/$3/$4/$5/$6/$7/ [R]
RewriteRule ^([A-Za-z_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/$ index.php?arg1=$1&arg2=$2&arg3=$3&arg4=$4&arg5=$5&arg6=$6&arg7=$7

# Mainly for 'controller/method_name/arg1/arg2/arg3/arg4/arg5' style links
RewriteRule ^([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/$ /$1/$2/$3/$4/$5/$6/$7/$8/ [R]
RewriteRule ^([A-Za-z_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/$ index.php?arg1=$1&arg2=$2&arg3=$3&arg4=$4&arg5=$5&arg6=$6&arg7=$7&arg8=$8

# Mainly for 'controller/method_name/arg1/arg2/arg3/arg4/arg5/arg6/' style links
RewriteRule ^([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/$ /$1/$2/$3/$4/$5/$6/$7/$8/$9 [R]
RewriteRule ^([A-Za-z_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/([A-Za-z0-9_\-]+)/$ index.php?arg1=$1&arg2=$2&arg3=$3&arg4=$4&arg5=$5&arg6=$6&arg7=$7&arg8=$8&arg9=$9


</IfModule>

# Hide our directory contents to prying eyes
IndexIgnore .*




